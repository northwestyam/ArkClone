#ifndef PADDLE_H_
#define PADDLE_H_

#include <string>
#include <SDL/SDL.h>

class Graphics;

class Paddle {
public:
	Paddle(
			const std::string& file_path,
			int source_x, int source_y,
			int width, int height);
	virtual ~Paddle();
	void update(int elapsed_time_ms);
	void draw(Graphics& graphics, int x, int y);

protected:
	SDL_Rect source_rect_;

private:
	SDL_Surface* sprite_sheet;
	int elapsed_time_;
};

#endif /* PADDLE_H_ */
