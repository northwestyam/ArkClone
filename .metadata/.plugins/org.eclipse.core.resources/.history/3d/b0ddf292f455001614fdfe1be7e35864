#include "paddle.h"
#include "graphics.h"

Paddle::Paddle(
		const std::string& file_path,
		int source_x, int source_y,
		int width, int height);
{
	sprite_sheet = SDL_LoadBMP(file_path.c_str));
	source_rect_.x = source_x;
	source_rect_.y = source_y;
	source_rect_.w = width;
	source_rect_.h = height;
}

Paddle::~Paddle() {

}

